"label": "Text",
"info": "55 characters max"
},
{
"type": "header",
"content": "Message"
},
{
"type": "html",
"id": "header_message2",
"label": "Text",
"info": "55 characters max"
},
{
"type": "text",
"id": "header_button",
"label": "Button"
},
{
"type": "url",
"id": "header_link",
"label": "Button link"
}
]
}
{% endschema %}