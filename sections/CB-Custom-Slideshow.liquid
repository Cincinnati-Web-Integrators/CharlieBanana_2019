{% schema %}
  {
    "name": "CB-Custom-Slideshow",
    "class": "slider-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "slider_home_auto",
        "label": "Auto-rotate slides"
      },
      {
        "type": "select",
        "id": "slider_home_rate",
        "label": "Transition time",
        "options": [
          {
            "value": "5000",
            "label": "5 seconds"
          },
          {
            "value": "7000",
            "label": "7 seconds"
          },
          {
            "value": "10000",
            "label": "10 seconds"
          },
          {
            "value": "15000",
            "label": "15 seconds"
          }        ]
      }
],
    "presets": [
      {
        "name": "CB Custom Slideshow",
        "category": "Image",
        "blocks":[
          {
          "type": "image",
          "type": "image",
          "type": "image"
         }
        ]
      }
    ],
    "blocks" : [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide",
            "label": "Image",
            "info":"1000 x 500px recommended"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          }
,

          {
            "type": "textarea",
            "id": "cb_slider_header_text",
            "label": "Header Text",
            "default": "Header Text"
          }

,

          {
            "type": "textarea",
            "id": "cb_slider_body_text",
            "label": "Body Text",
            "default": "Body Text"
          }

,

          {
            "type": "textarea",
            "id": "cb_slider_button_text",
            "label": "Button Text",
            "default": "Button Text"
          }







        ]
      }
    ]
  }
{% endschema %}